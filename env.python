#
# ~/.env.python
#

# Virtualenv
export WORKON_HOME=$HOME/.virtualenvs
if [[ $PYTHON_VERSION ]]; then
    virtualenvwrapper=$(which virtualenvwrapper-$PYTHON_VERSION.sh)
else
    virtualenvwrapper=$(which virtualenvwrapper.sh)
fi
. $virtualenvwrapper

# pylint
export PYLINTHOME=$HOME/var/lib/pylint.d
